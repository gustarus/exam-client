.splash
  width 140px
  height 140px
  padding 40px
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  border-radius 50%
  background #fff
  box-shadow 2px 2px 4px -2px rgba(0, 0, 0, 0.25)
  z-index 100
  &__spinner
    indicator(dark)
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    z-index 101
  &__logo
    display block
    width 100%
    height 100%
    fill #7B467F
