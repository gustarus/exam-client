@import 'variables.styl'
@import 'mixins.styl'

button()
  display block
  line-height 30px
  padding 0 15px
  box-shadow none
  text-align center
  vertical-align top
  color #fff
  background-color #7B467F
  font-family $fontFamilyLight
  font-size 13px
  cursor pointer
  border none
  outline none
  &:hover
  &:focus
    color #fff
    background-color #96559b

indicator(type = light)
  width 100%
  height 100%
  font-size 10px
  position relative
  text-indent -9999em
  border-width 1px
  border-style solid
  transform translateZ(0)
  animation preloader 1s infinite linear
  &, &:after
    border-radius 50%
  if type == light
    border-top-color rgba(255, 255, 255, 0.5)
    border-right-color rgba(255, 255, 255, 0.6)
    border-bottom-color rgba(255, 255, 255, 0.7)
    border-left-color #ffffff
  if type == dark
    border-top-color rgba(123, 70, 127, 0.5)
    border-right-color rgba(123, 70, 127, 0.6)
    border-bottom-color rgba(123, 70, 127, 0.7)
    border-left-color #7B467F

@keyframes preloader
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)
  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)


