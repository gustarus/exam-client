@import '~@core/styles/bricks'

.container
  position fixed
  width 50px
  height 50px
  top 25px
  left 25px
  animation-name show-indicator
  animation-delay 1s
  animation-duration .3s
  animation-fill-mode both

.indicator
  indicator(light)

@keyframes show-indicator
  0%
    opacity 0
  100%
    opacity 1
